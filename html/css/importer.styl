table
	tbody
		tr.isSelected
			background-color #31353D

			td
				color #EEE
				font-weight bold

	&.table-content-center
		th,
		td
			font-size 0.6em
			text-align center

	&.table-custom-parciales
		width 100%
		thead
			tr
				&.titulo
					background-color color-base
					span
						color #fff
		tbody
			tr
				td
					&:hover
						background-color #008080
						cursor pointer
						color #fff						
					&.active
						background-color #008080
						color #fff
	

	&.table-vertical
		margin-top 180px !important		
		thead
			tr
				th					
					&.vertical-th 
						border-top 1px solid transparent !important
						width 20px
						position relative
						margin 0px !important
						padding 0px !important
						
						span
							border 1px solid #333
							border-bottom none
							border-left none
							/*background-color #FFF !important*/
							position absolute
							display inline-block
							margin 0px !important
							padding 0px !important
							transform rotate(270deg)
							background-color color-base
							width 180px
							left -88px
							bottom 90px !important
							font-size 10px !important
							margin-left 10px !important
							color #fff !important
							&:last-child
								border-bottom 1px solid #333

	&.table-custom
		width 100%
		margin-top 10px
		border-collapse collapse
		thead
			tr
				border 1px solid #D6D6D6

				&.titulo
					background-color color-base
					span
						color #fff
					label
						color #fff
				th
					&.min
						width 100px
						
		tbody
			tr
				&.openModal:hover
					background-color color-hover
					cursor pointer
					td
						color #fff
				td
					
					border 1px solid #D6D6D6
					&.min
						width 100px						
					&.tableEmpty
						background-color #EAEAEA
					
							

				&:hover
					background-color 
					cursor pointer

				&.isActive
					background-color rgba(30, 30, 30, 0.2)
		tfoot
			tr
				td
					border 1px solid white
		
		.table-row-full
			width 100%
			
		.table-row-half
			display inline-block
			vertical-align top
			width 50%

	&.pointer

		tbody

			tr
				&:hover
					cursor pointer
					background-color color-hover

					td
						color #fff
